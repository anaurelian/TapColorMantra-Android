<resources>

    <!-- ************** -->
    <!-- App Theme      -->
    <!-- ************** -->

    <!-- Base application theme -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:windowFullscreen">true</item>
        <item name="android:actionBarStyle">@style/AppActionBarStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/AppActionBarOverflow</item>

        <item name="actionBarCorrection">?android:attr/actionBarSize</item>
    </style>

    <!-- Customized background Action Bar style -->
    <style name="AppActionBarStyle" parent="android:Widget.Material.Light.ActionBar.Solid">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:displayOptions">none</item>
    </style>

    <!-- Action Bar material Overflow icon style -->
    <style name="AppActionBarOverflow" parent="@android:style/Widget.Material.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_white_shadow</item>
    </style>

    <!-- ************** -->
    <!-- Settings Theme -->
    <!-- ************** -->

    <!-- Settings activity theme -->
    <style name="AppSettingsTheme" parent="android:Theme.Material.Light.DialogWhenLarge">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>